@model ForretasAPITester.Models.LoginData

@{
    ViewData["Title"] = "Login";
}

<div class="text-center">
    <div class="row" text-align:center">
        <div class="col-md-3" style="text-align:center">
            <h2 style="text-align:left"><strong>Login</strong></h2><br />
            <form asp-action="Login" method="post">
                <div class="form-group" style="text-align:left">
                    <label>Username</label>
                    <input type="text" class="form-control" id="userName" name="userName" placeholder="Username">
                </div>
                <div class="form-group" style="text-align:left">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password" id="password" placeholder="Password">
                </div>
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="form-check" style="padding-top:5px;padding-bottom:20px;">
                        <span style="color:red;font-size:12px">@Model.ErrorMessage</span>
                    </div>
                }

                <div class="form-check">
                    <button class="btn btn-info" type="reset">Clear</button>
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>