@model ForretasAPITester.Models.AddProductsData

@section scripts{
    <partial name="_ValidationScriptsPartial" />
}

@{
    ViewBag.Title = "Test adding products throough API";
}

<br />

<form asp-action="SendAddRequest" method="post" enctype="multipart/form-data">
    <div class="container" style="padding-bottom:25px">
        <h4>Test adding products with API</h4>
        <div style="width: 70%; float:left; border:solid 1px black">

            <table width="95%" align="center" style="margin-bottom:15px;">
                <tr>
                    <td width="40%">
                        <label>Domínio:</label>
                    </td>
                    <td>
                        <input type="text" class="form-control" style="width:100%" asp-for="DomainName" />
                        <span style="font-size:10px; color:red" asp-validation-for="DomainName"></span>
                    </td>
                </tr>
                <tr>
                    <td width="40%">
                        <label>Prefixo:</label>
                    </td>
                    <td>
                        <input type="text" class="form-control" style="width:100%" asp-for="Prefix" />
                        <span style="font-size:10px; color:red" asp-validation-for="Prefix"></span>
                    </td>
                </tr>
                <tr>
                    <td width="40%">
                        <label>Categoria:</label>
                    </td>
                    <td>
                        <input type="text" class="form-control" style="width:100%" asp-for="Category" />
                        <span style="font-size:10px; color:red" asp-validation-for="Category"></span>
                    </td>
                </tr>
                <tr>
                    <td width="40%">
                        <label>Marca</label>
                    </td>
                    <td>
                        <input type="text" class="form-control" style="width:100%" asp-for="Brand" />
                        <span style="font-size:10px; color:red" asp-validation-for="Brand"></span>
                    </td>
                </tr>
                <tr>
                    <td width="40%">
                        <label>Preço:</label>
                    </td>
                    <td>
                        <input type="text" class="form-control" style="width:100%" asp-for="Price" />
                        <span style="font-size:10px; color:red" asp-validation-for="Price"></span>
                    </td>
                </tr>
                <tr>
                    <td width="40%">
                        <label>Preço promoção:</label>
                    </td>
                    <td>
                        <input type="text" class="form-control" style="width:100%" asp-for="PromotionPrice" />
                        <span style="font-size:10px; color:red" asp-validation-for="PromotionPrice"></span>
                    </td>
                </tr>
                <tr>
                    <td width="40%">
                        <label>Preço portas:</label>
                    </td>
                    <td>
                        <input type="text" class="form-control" style="width:100%" asp-for="PricePortas" />
                        <span style="font-size:10px; color:red" asp-validation-for="PricePortas"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>Criar EANs?</label>
                    </td>
                    <td>
                        <input type="checkbox" asp-for="NewEan" />
                    </td>
                </tr>
                <tr>
                    <td width="40%">
                        <label>Quantidade:</label>
                    </td>
                    <td>
                        <input type="text" class="form-control" style="width:100%" asp-for="NoOfProducts" />
                        <span style="font-size:10px; color:red" asp-validation-for="NoOfProducts"></span>
                    </td>
                </tr>
                <tr>
                    <td width="40%">
                        <label>Offset:</label>
                    </td>
                    <td>
                        <input type="text" class="form-control" style="width:100%" asp-for="Offset" />
                        <span style="font-size:10px; color:red" asp-validation-for="Offset"></span>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <button type="submit" class="btn btn-info" asp-action="SendAddRequest">Enviar a API</button>
                    </td>
                </tr>
            </table>
            <hr />

            @if (!string.IsNullOrEmpty(Model.APIResponse))
            {
                <table width="95%" align="center" style="margin-bottom:15px;">
                    <tr>
                        <td>Resposta da API</td>
                    </tr>
                    <tr>
                        <td>
                            <textarea cols="80" rows="20">
                                @Model.APIResponse.Trim()
                            </textarea>
                        </td>
                    </tr>
                </table>
            }

        </div>
    </div>
</form>